FROM busybox:latest
MAINTAINER bskim <bskim@mantech.co.kr>
LABEL type="accordion-wildfly"

#Make Dirctroy
RUN mkdir /deploy \ 
    && mkdir /config \
    && mkdir /lib

ADD deployment /deployment

ADD accordion-wildfly-runner.sh /

RUN chmod 755 accordion-wildfly-runner.sh

CMD ["/accordion-wildfly-runner.sh"]